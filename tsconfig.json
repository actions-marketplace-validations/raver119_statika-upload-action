{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "diagnostics": true,
    "target": "ES5",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": false,
    "types": [ "node" ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "CommonJS",
    "typeRoots": [
      "/.node_modules/@types"
    ],
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "build/**/*.js",
    "build/**/*.ts"
  ]
}